# vim: ft=muttrc

  set askcc
unset confirmappend
  set delete
  set edit_headers
  set editor            = "vim +:silent+?^$"
  set fast_reply
  set forward_format    = "Fwd: %s"
  set forward_quote
  set header_cache      = ~/.mutt/cache
unset help
  set include
  set index_format      = "%3C %Z %[!%m/%d] %-17.17F %s"
  set mail_check        = 0
  set mailcap_path      = ~/.mailcap
unset mark_old
unset markers
  set mime_forward      = ask-no
  set mbox_type         = Maildir
  set menu_scroll
  set pager_context     = 5
  set pager_index_lines = 10
  set pager_stop
  set pipe_decode
unset record
  set reply_to
  set reverse_name
  set sort              = threads
  set sort_aux          = reverse-last-date-received
  set spoolfile         = ~/.mutt/mail
  set status_format     = "-%r- %f%?t? Tagged:%t?%?p? Drafts:%p? -%>-"
  set strict_threads
  set thorough_search
  set tilde
  set timeout           = 3
  set tmpdir            = ~/.mutt/tmp

auto_view text/calendar
auto_view text/html
alternative_order text/plain text/enriched text/html

source ~/.mutt/account/gmail
source ~/.mutt/bindings
