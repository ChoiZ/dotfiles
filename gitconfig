[user]
  name = François LASSERRE
  email = choiz@me.com
[diff]
  tool = vimdiff
[color]
  branch = auto
  diff = auto
  status = auto
  interactive = auto
  ui = true
[alias]
  br = branch
  co = checkout
  sh = show --color-words
  st = status
  di = diff
  pom = push origin master
  me = merge
  menoff = merge --no-ff
  last = cat-file commit HEAD
  # submodule
  subpull = submodule foreach git pull
  #stash
  sta = stash
  stalist = stash list
  stast = stash list
  stapp = stash pop
  starm = stash drop
  # log
  graph = log --graph --decorate
  graphs = log --graph --decorate --stat
  tree = log --graph --oneline --decorate
  logs = log --stat --decorate
  # branch
  currentbranch = "!git branch | grep ^* | cut -d \" \" -f 2"
  cleanbr = "!git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d"
[core]
  excludesfile = ~/.gitignore
  editor = vim
  filemode = false
[push]
  default = current
[merge]
  tool = vimdiff
[http]
  #sslverify = false
[github]
  user = ChoiZ
[filter "rcs-keywords"]
  clean = ~/dotfiles/git_filters/rcs-keywords.clean
  smudge = ~/dotfiles/git_filters/rcs-keywords.smudge %f
[grep]
  lineNumber = true
