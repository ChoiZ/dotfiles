[user]
    name = François LASSERRE
    email = choiz@me.com
    signingkey = 6C0C9204CD9D3BE3
[commit]
    gpgsign = true
[diff]
    tool = vimdiff
[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto
    ui = true
[alias]
    br = branch
    co = checkout
    sh = show --color-words
    st = status
    di = diff
    pom = push origin master
    me = merge
    menoff = merge --no-ff
    merged = branch -r --merged origin/master
    pruned = remote prune origin
    last = cat-file commit HEAD
    # submodule
    subpull = submodule foreach git pull
    #stash
    sta = stash
    stalist = stash list
    stast = stash list
    stapp = stash pop
    starm = stash drop
    # log
    graph = log --graph --decorate --show-signature
    graphs = log --graph --decorate --stat --show-signature
    tree = log --graph --format='%ar %h %s %cd' --decorate --stat
    logs = log --stat --decorate --show-signature
    # branch
    # current branch
    cb = rev-parse --abbrev-ref HEAD
    # branch source
    brs = !"git show-branch -a | ack '\\*' | ack -v \"`git cb`\" | head -n1 | sed 's/.*\\[\\(.*\\)\\].*/\\1/' | sed 's/[\\^~].*//'"
    brclean = "!git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d"
    brlist = "!for branch in `git branch -r | grep -v \"HEAD\\|master\\|develop\\|release\"`; do echo `git show --format=\"%ai %ar by %an\" $branch | head -n 1` $branch; done | sort -r"
[core]
    excludesfile = ~/.gitignore
    editor = vim
    filemode = false
    pager ="less -FRSX"
[pager]
    grep = false
[push]
    default = current
[merge]
    tool = vimdiff
[http]
    #sslverify = false
[filter "rcs-keywords"]
    clean = ~/dotfiles/git_filters/rcs-keywords.clean
    smudge = ~/dotfiles/git_filters/rcs-keywords.smudge %f
[grep]
    lineNumber = true
[hooks]
    checkphp = true
    checkjs = true
